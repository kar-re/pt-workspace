import java.awt.Color;

import se.lth.cs.pt.square.Square;
import se.lth.cs.pt.window.SimpleWindow;

public class DrawSquareLine {
	public static void main(String[] args) {
		SimpleWindow w = new SimpleWindow(500, 500, "Move Square");
		Square sq = new Square(0, 0, 20);
		int oldX = 0;
		int oldY = 0;
		int steps = 20;
			while(true) {
				w.waitForMouseClick();
//				w.clear();
				int x = w.getMouseX();
				int y = w.getMouseY();
//				steps = x
				w.setLineWidth(10);
				for (int i=1; i<=steps; i++) {
//					float curr = (((float) i/(float) steps));
//					prectestX = lastX + ((x - lastX)*i/steps);
//					prectestY = lastY + ((y - lastY)*i/steps);
//					w.lineTo((int) prectestX, (int) prectestY);
					int deltaX =  (((x - oldX) / steps));
					int deltaY =  (((y - oldY) / steps));
					float curr = (((float) i/(float) steps));
					Color RGB = Color.getHSBColor(curr, 1.0f, 1.0f);
					w.setLineWidth((deltaX/100)*i);
					w.setLineColor(RGB);
					System.out.println("DeltaX: " + deltaX  + " DeltaY: " + deltaY + " x: " + x + " y: " + y );
					sq.move(deltaX, deltaY);
					sq.draw(w);
					w.delay(2);
				}
				oldX = x;
				oldY = y;
			}
	}
}
