import se.lth.cs.pt.window.SimpleWindow;

public class SampleWindowExample {
	public static void main(String[] args) {
		SimpleWindow w = new SimpleWindow(500, 500, "Drawing Window");
		w.moveTo(100, 100);
		w.lineTo(150, 100);
		
		for(int i = 1; i <= 6; i++ ) {
			w.moveTo(w.getWidth()/(2*i), w.getHeight()/(2*i));
			w.writeText("Hej världen!");
			w.delay(500);
			for(int o = 1; o <= 6; o++ ) {
				w.moveTo(Math.random()*w.getHeight(), Math.random()*w.getHeight());
				w.writeText("Hej världen!");
				w.delay(500);
			}
		}
	}
}
